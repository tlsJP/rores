{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "module": "ES2022",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "$lib/*": ["lib/*"],
      "$styles/*": ["styles/*"],
      "$components/*": ["components/*"],
      "$layouts/*": ["layouts/*"]
    }
  }
}
